<p id="notice"><%= notice %></p>

<h1>Metadata Import</h1>

<% if @import_jobs.count > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Job ID</th>
        <th>Job Name</th>
        <th>User</th>
        <th>Timestamp</th>
        <th>Uploaded File</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @import_jobs.each do |import_job| %>
        <tr>
          <td><%= link_to import_job.id, import_job_path(import_job) %></td>
          <td><%= import_job.name %></td>
          <td><%= import_job.cas_user&.name%></td>
          <td><%= import_job.timestamp %></td>
          <td><%= import_job.file_to_upload.filename %></td>
          <% if import_job.status.nil? %>
            <td class="plastron_operation_status_<%= import_job.status %>">
              <%= I18n.t("activerecord.models.import_job.attributes.stage.#{import_job.stage}") %> (<%= import_job.plastron_operation.progress %>%)
            </td>
          <% else %>
            <td class="import_job_status_<%= import_job.status %>">
              <%= I18n.t("activerecord.models.import_job.attributes.status.#{import_job.status}") %>
            </td>
          <% end %>
          <% if import_job.workflow_action == :resubmit %>
            <td><%= link_to 'Resubmit', edit_import_job_path(import_job) %></td>
          <% elsif import_job.workflow_action == :import %>
            <td><%= button_to 'Import', perform_import_import_jobs_path(import_job) %>
          <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
<% else %>
  <p>No Import jobs found</p>
<% end %>

<%= link_to 'New Import Job', new_import_job_path %>
